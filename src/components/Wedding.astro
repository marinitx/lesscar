---
import Button from "./Button.astro"
---

<section>
    <div class="big">
        <div class="text">
            <h2><span class="bold">¿Boda a la vista? </span><span class="normal">Tenemos el coche perfecto para tu día especial.</span></h2>
            <Button href="" content="Mira la disponibilidad" type="light"></Button>
        </div>
    </div>
    <div class="shadow">
        <img class="car" src="/img/glc.png" alt="Mercedes GLC blanco">
    </div>
    <img class="white" src="/img/white.svg" alt="">
</section>

<style>

    section {
        margin-top: 10vw;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
        max-width: 100%;
        width: auto;
        overflow: hidden;
    }

    h2 {
        color: white;
        max-width: 90%;
        line-height: 3.4vw;
    }

    .text {
        max-width: 60%;
    }

    .big {
        display: flex;
        justify-content: right;
        align-items: right;
    }

    .car {
        margin: 0;
        position: absolute;
        width: 55vw;
    }

    .white {
        margin: 0;
        position: relative;
        z-index: -1;
        max-width: 100%;
    }

    .shadow {
        position: relative; /* Necesario para posicionar la sombra correctamente */
    }

    .shadow::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 10%;
    width: 60%;
    height: 100%;
    background: linear-gradient(180deg, rgba(4, 208, 181, 0.65), rgba(0, 51, 44, 0.65));
    border-radius: 50%;
    transform: translate(-50%, -50%);
    z-index: -1; /* Coloca la sombra detrás de la imagen */
    filter: blur(60px);
}

/* Estilos para pantallas pequeñas (dispositivos móviles) */
    @media (max-width: 768px) {
        .text {
            width: 100%;
            max-width: 100%;
        }

        h2 {
            width: 100%;
        }

        .big {
            justify-content: center;
            max-width: 100%;
            display: flex;
            align-items: center;
            padding-left: 6vw;
            padding-bottom: 6vw;
            padding-right: 6vw;
        }

        .car {
            width: 70vw;
        }

        .white {
            margin-top: 6vw;
        }
    }

</style>