---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Alquiler de coches en Madrid" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/img/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Rock+Salt&display=swap');

	@font-face {
        font-family: 'Dissfunction';
        src: url('/fonts/Dissfunction.ttf') format('ttf');
		font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);

		
	}

	

	/* @font-face {
  	font-family: 'GeneralSans';
  	src: url('fonts/GeneralSans-Variable.ttf') format('ttf');
  	font-style: normal;
  	font-display: swap;
	} */


	html {
		font-family: 'Inter', sans-serif, normal;
		background: #212121;
		background-size: cover;
		max-width: 100%;
		width: 100%;
	}
	.special-font {
		font-family: 'Dissfunction', normal;
	}

	.bold {
		font-size: 3rem;
		font-weight: 800;
	} 

	.normal {
		font-size: 3rem;
		font-weight: 500;
	}

	a {
		font-size: 1rem;
	}

	h1 {
        color: white;
        font-size: 5.3rem;
        flex-grow: 1;
        margin-bottom: 2rem; /* Espacio entre el h1 y el bot√≥n */
        line-height: 6.5vw;
        max-width: 30rem;
		font-weight: 800;
    }

	label {
		font-size: 1rem;
		line-height: 2rem;
	}

	.hidden {
  		display: none;
	}

	@media (max-width: 768px)
	{
		.bold {
			font-size: 1.3rem;
			line-height: 2rem;
		}

		.normal {
			font-size: 1.3rem;
			line-height: 2rem;
		}

		a {
			font-size: 1em;
		}

		h1 {
			font-size: 3rem;
			line-height: 3rem;
		}

		label {
        	font-size: 1rem;
			line-height: 2rem;
    	}
	}

</style>
